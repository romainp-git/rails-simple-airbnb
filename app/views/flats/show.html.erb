<div class="map" style="background: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200'); background-size: cover; height: 400px;"></div>

<div class="container negative-margin">
  <div class="row">
    <div class="col-12 col-lg-8 mb-3">
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title"><%= @flat.name %></h2>
          <p class="card-text"><%= @flat.address %></p>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h3 class="card-title">A bit more about this flat...</h3>
          <p class="card-text"><%= @flat.description %></p>
          <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d8438.789640846579!2d3.0191933912840128!3d50.632704137646584!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1731512460342!5m2!1sfr!2sfr" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe> </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card p-3 mb-3">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-primary mt-2" style="width: 100%">
        </form>
      </div>

      <div class="card p-3 mb-3">
        <h3>Details</h3>
        <div class="d-flex">
          <div><%= @flat.number_of_guests %> people</div><div class="ms-3"><%= @flat.price_per_night %> â‚¬</div>
        </div>
      </div>

      <div class="card p-3 mb-3">
        <div class="d-flex justify-content-between align-items-center">
          <h6 class="mb-0">Share</h6>

          <div class="d-flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
